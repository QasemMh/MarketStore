@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}



@section Style{

    <style>
        .banner-area {
            min-height: 100vh
        }

        img {
            object-fit: cover
        }

        .single-product .product-details .price .l-through {
            text-decoration: none
        }
    </style>
}


 
    <!-- start banner Area -->
    <section class="banner-area">
        <div class="container">
            <div class="row fullscreen align-items-center justify-content-start">
                <div class="col-lg-12">
                    <div class="active-banner-slider owl-carousel">
                        <!-- single-slide -->
                        @foreach (var item in Model.Sliders)
                    {
                        <div class="row single-slide align-items-center d-flex">
                            <div class="col-lg-5 col-md-6">
                                <div class="banner-content">
                                    <h1> @item.Title </h1>
                                    <p> @item.Description</p>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="banner-img">
                                    <img class="img-fluid" src="~/images/@item.Image" alt="photo">
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- start features Area -->
<section class="features-area section_gap">
    <div class="container">
        <div class="row features-inner">
            <!-- single features -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="single-features">
                    <div class="f-icon">
                        <img src="~/home/img/features/f-icon1.png" alt="">
                    </div>
                    <h6>Free Delivery</h6>
                    <p>Free Shipping on all order</p>
                </div>
            </div>
            <!-- single features -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="single-features">
                    <div class="f-icon">
                        <img src="~/home/img/features/f-icon2.png" alt="">
                    </div>
                    <h6>Return Policy</h6>
                    <p>Free Shipping on all order</p>
                </div>
            </div>
            <!-- single features -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="single-features">
                    <div class="f-icon">
                        <img src="~/home/img/features/f-icon3.png" alt="">
                    </div>
                    <h6>24/7 Support</h6>
                    <p>Free Shipping on all order</p>
                </div>
            </div>
            <!-- single features -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="single-features">
                    <div class="f-icon">
                        <img src="~/home/img/features/f-icon4.png" alt="">
                    </div>
                    <h6>Secure Payment</h6>
                    <p>Free Shipping on all order</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end features Area -->
<!-- Start category Area -->
<section class="category-area">
    <div class="container">
        <h2 class="text-center mb-4">Choose the store category that suits you</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-12">
                <div class="row">

                    @{
                        bool flag = true;
                    }
                    @foreach (var item in Model.CategoryList)
                    {
                        if (flag)
                        {
                            <div class="col-lg-8 col-md-8">
                                <div class="single-deal">
                                    <div class="overlay"></div>
                                    <img style="height:223px"
                                 class="img-fluid w-100" src="~/images/@item.Image"
                                 alt="photo-@(flag= false)">
                                    <a asp-action="Shop"
                               asp-controller="Home"
                               asp-route-storeCategoryId="@item.Id">
                                        <div class="deal-details">
                                            <h6 class="deal-title"> @item.Name</h6>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-4 col-md-4">
                                <div class="single-deal">
                                    <div class="overlay"></div>
                                    <img style="height:223px"
                                 class="img-fluid w-100" src="~/images/@item.Image"
                                 alt="photo-@(flag= true)">
                                    <a asp-action="Shop"
                               asp-controller="Home"
                               asp-route-storeCategoryId="@item.Id">
                                        <div class="deal-details">
                                            <h6 class="deal-title">@item.Name</h6>
                                        </div>
                                    </a>
                                </div>
                            </div>

                        }






                    }


                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single-deal">
                    <div class="overlay"></div>
                    <img class="img-fluid w-100" src="~/home/img/category/c5.jpg" alt="">
                    <a href="~/home/img/category/c5.jpg" class="img-pop-up" target="_blank">
                        <div class="deal-details">
                            <h6 class="deal-title">See Discounted Product</h6>
                        </div>
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- End category Area -->
<!-- start product Area -->
<section class="active-product-area section_gap">
    <!-- single product slide -->
    <div class="single-product-slider">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="section-title">
                        <h1>Latest Products</h1>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et
                            dolore
                            magna aliqua.
                        </p>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- single product -->
                @foreach (var item in Model.Products)
                {

                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <img class="img-fluid" src="~/images/@item.ProductImages.ToArray()[0].Image" alt="">
                            <div class="product-details">
                                <h6>

                                    <a asp-action="Product"
                                   asp-controller="Home"
                                   asp-route-id="@item.Id"
                                   class="h6">@item.Name</a>
                                </h6>
                                <div class="price">
                                    <h6>@(String.Format("{0:0.0#}",item.Price))</h6>
                                    <h6 class="l-through">
                                        <a asp-action="Shop"
                                       asp-controller="Home"
                                       asp-route-storeId="@item.Store.Id">
                                            @item.Store.Name
                                        </a>
                                    </h6>
                                </div>
                                <div class="prd-bottom">

                                    <button class="btn addToCart" data-itemid="@item.Id">
                                        <span class="ti-bag"></span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
 
    </div>
    <div class="text-center my-2">
        <a class="primary-btn" asp-action="Shop"
           asp-controller="Home">View All Product</a>
    </div>
</section>
<!-- end product Area -->
@section Scripts
    {
    <script>
        let btns = document.querySelectorAll(".addToCart");

        btns.forEach(btn => {
            btn.addEventListener('click', function(event) {
                event.preventDefault();

                console.log(btn);

                btn.disabled = true;

                let formData = new FormData();
                formData.append("id", btn.dataset.itemid);

                fetch("Cart/Add", {
                    method: 'POST',
                    body: formData
                }).then(res => {
                    if (res.ok) {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Item Added To Cart',
                            showConfirmButton: false,
                            timer: 1000
                        })

                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'try again'
                        })


                    }
                    btn.removeAttribute('disabled');
                });
            });

        })
    </script>

}
 
