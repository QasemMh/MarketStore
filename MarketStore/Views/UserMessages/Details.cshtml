@model UserMessage

@{
    ViewData["Title"] = "User Message Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">User Message Details</h1>

<div class="row">
    <div class="col-md-12">


        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    User Message Details
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Name
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Name
                    </dd>

                    <dt class="col-sm-4">
                        Email
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Email
                    </dd>
                    <dt class="col-sm-4">
                        Subject
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Subject
                    </dd>
                    <dt class="col-sm-4">
                        Message:
                    </dt>
                    <dd class="col-sm-8 text-justify">
                        @Model.Message
                    </dd>
                </dl>

            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-secondary" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>
