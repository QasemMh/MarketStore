    <!-- Page level plugins -->
    <script src="~/admin/vendor/chart.js/Chart.min.js"></script>
    <script src="~/admin/vendor/chartjs-plugin-datalabels/chartjs-plugin-datalabels.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/chart-pie-demo.js" asp-append-version="true"></script>
