@model User

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-12">

        <div class="card mb-4">
            <h5 class="card-header">Profile Details</h5>
            <!-- Account -->
            <hr class="my-0">
            <div class="card-body">
                <form asp-action="Profile" method="POST">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label asp-for="Customer.FirstName" class="form-label">First Name</label>
                            <input class="form-control" required type="text" asp-for="Customer.FirstName" autofocus="">
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Customer.MiddleName" class="form-label">Middle Name</label>
                            <input class="form-control" type="text" asp-for="Customer.MiddleName" autofocus="">
                        </div>

                        <div class="mb-3 col-md-6">
                            <label asp-for="Customer.LastName" class="form-label">Last Name</label>
                            <input class="form-control" required type="text" asp-for="Customer.LastName" autofocus="">
                        </div>

                        <div class="mb-3 col-md-6">
                            <label asp-for="Email" class="form-label"> Email</label>
                            <input class="form-control" required type="email" asp-for="Email" autofocus="">
                            <span class="text-danger" asp-validation-for="Email"> </span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label class="form-label" asp-for="Phone">Phone Number</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">Jo (+962)</span>
                                <input type="text" asp-for="Phone"
                                       class="form-control" placeholder="07xxxxxxxx">
                                <span class="text-danger" asp-validation-for="Phone"> </span>

                            </div>
                        </div>

                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Save changes</button>
                    </div>
                </form>
            </div>
            <!-- /Account -->
        </div>
    </div>

    <div class="col-md-6">

        <div class="card">
            <h5 class="card-header">Change Password</h5>
            <div class="card-body">
                <form method="POST" asp-action="ChangePassword">
                    <div class="form-group mb-2 ">
                        <label for="OldPassword" class="form-label">Old Password</label>
                        <input type="password" name="oldPassword" id="OldPassword"
                               required
                               class="form-control" />
                    </div>
                    <div class="form-group mb-2  ">
                        <label for="NewPassword" class="form-label">New Password</label>
                        <input type="password" name="newPassword"
                               required
                               id="NewPassword" class="form-control" />
                    </div>
                    <div class="form-group mb-2 ">
                        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input type="password"
                               required
                               name="confirmPassword"
                               id="ConfirmPassword" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <mark> @(ViewBag.passwordError !=null ?ViewBag.passwordError:"") </mark>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Password</button>
                </form>
            </div>
        </div>


    </div>
</div>


@section Scripts {


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }