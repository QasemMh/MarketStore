@{
    ViewData["Title"] = "Index";
}


<!-- Content -->
@if (ViewBag.hasVisa == true)
{
    <div class="row">
        <div class="col-lg-8 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Congratulations John! 🎉</h5>
                            <p class="mb-4">
                                You have Received <span class="fw-bold">500</span>jo as Gift from Market Store. SHOP NOW
                            </p>

                            <a asp-action="Payment" asp-controller="Customer" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="/customer/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
            </div>
        </div>



        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-12">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Request FREE Credit</h5>

                            <form asp-action="RequestFund" asp-controller="Customer" method="post">
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-fullname11">Enter Coupon Code</label>
                                    <input type="text" class="form-control" id="basic-default-fullname11"
                                       placeholder=""
                                       name="coupon">
                                </div>
                                <mark class="my-4 text-danger d-block">@(ViewBag.CouponError? "There An Error Try Again!" :"") </mark>
                                <button type="submit" class="btn btn-primary">Request</button>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>







    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Add Payment Method 💵 </h5>
                            <p class="mb-4">
                                Hello @ViewBag.Name Add Visa To Get <span class="fw-bold">500</span>jo as Gift from Market Store
                            </p>

                            <a asp-action="Payment" asp-controller="Customer" class="btn btn-sm btn-outline-primary">Add Visa?</a>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="/customer/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- / Content -->
