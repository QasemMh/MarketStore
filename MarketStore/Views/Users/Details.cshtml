@model User

@{
    ViewData["Title"] = "User Details";
}

<h1 class="h3 mb-4 text-gray-800">User Details</h1>

<div class="row">
    <div class="col-md-12">


        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    User Details
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Username
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Username
                    </dd>

                    <dt class="col-sm-4">
                        Email
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Email
                    </dd>

                    <dt class="col-sm-4 ">
                        Phone
                    </dt>
                    <dd class="col-sm-8 text-justify">
                        @Model.Phone
                    </dd>

                    <dt class="col-sm-4 ">
                        Role
                    </dt>
                    <dd class="col-sm-8 text-justify">
                        <mark>@Model.Role.Name</mark>
                    </dd>

                </dl>

                @if (Model.CustomerId != null)
                {
                    <hr class="my-12" />
                    <dl class="row">
                        <dt class="col-sm-4">
                            Full Name
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Customer.FirstName @(Model.Customer.MiddleName?? "") @Model.Customer.LastName
                        </dd>

                        <dt class="col-sm-4">
                            Address Details
                        </dt>
                        @if(Model.Customer.AddressId!=null)
                        {
                            <dd class="col-sm-8">
                                <span class="d-block">City: @Model.Customer.Address?.City</span>
                                <span class="d-block">Address 1: @Model.Customer.Address?.Address1</span>
                                <span class="d-block">Address 2: @Model.Customer.Address?.Address2</span>
                                <span class="d-block">Address 3: @Model.Customer.Address?.Address3</span>
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-8">
                                <span class="d-block">Address Not Set For This User</span>

                          </dd>
                        }



                    </dl>

                }

            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-secondary" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>