@model MarketStore.Models.Review

@{
    ViewData["Title"] = "Users Reviews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h3 mb-4 text-gray-800">Users Reviews</h1>

<div class="row">
    <div class="col-md-12">


        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    Users Reviews Details
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <dl class="row">
                            <dt class="col-sm-4">
                                Info
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Name - <small>@Model.JobTitle</small>
                            </dd>

                            <dt class="col-sm-4">
                                Reviews
                            </dt>
                            <dd class="col-sm-8 text-justify">
                                @Model.Review1
                            </dd>

                        </dl>
                    </div>
                    <div class="col-md-5">
                        <img class="img-thumbnail" src="~/images/@Model.Image" />
                    </div>
                </div>

            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>